{
  "name": "fintuning container",
   "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--gpus=all"
  ],
  "postCreateCommand": "uv sync && .devcontainer/setup.fish",
  "settings": {
    "terminal.integrated.shell.linux": "/usr/bin/fish"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "github.gitmoji"
      ]
    }
  }
}